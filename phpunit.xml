<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader">

    <testsuites>
        <testsuite name="RedLink Test Suite">
            <directory>./tests/RedLink/Tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="API_KEY" value="REPLACE_ME" />
        <env name="API_ANALYSIS" value="php-sdk" />
        <env name="API_ANALYSIS" value="php-tests" />
    </php>
</phpunit>
